        <div class="control-group">
            <p><label class="tableft50a">Sie d√ºrfen mich per E-Mail kontaktieren</label></p>
            <div class="input-append">
                <input type="checkbox" id="acceptedEmailContact" name="acceptedEmailContact" checked="{{acceptedEmailContact}}"/>
            </div>
        </div>

        <div class="control-group">
            <p><label class="tableft50a">Land</label></p>
            <div class="input-append">
                <select name="country" id="countries" class="form-control bfh-countries" data-country="US"></select>
            </div>
        </div>

        <div class="control-group">
            <p><label class="tableft50a">Sprache</label></p>
            <div class="input-append">
                <select name="language" id="languages" class="form-control bfh-languages" data-language="en"></select>            
            </div>
        </div>

        <div class="control-group">
            <p><label class="tableft50a">Telefon</label></p>
            <div class="input-append">
        <!--    <input name="phone" id="phones" type="text" class="form-control bfh-phone" data-country="countries"/>  -->
                <input name="phone" id="phone" type="text" class="form-control bfh-phone" data-country="countries"  placeholder="z.B. 0049 221 8853"/>
            </div>
        </div>
        
